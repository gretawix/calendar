{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "strict": true,
        "noUncheckedIndexedAccess": true,

        "moduleResolution": "Bundler",
        "module": "ESNext",
        "noEmit": true,
        "rootDir": "src",

        "lib": ["ES2022", "DOM", "DOM.Iterable"]
    },
    "include": ["src/**/*.ts"]
}
